<odoo>
    <data>
        <record id="invoice_gstr2_form" model="ir.ui.view">
            <field name="name">GSTR2 Report</field>
            <field name="model">texbyte_gstr.report.gstr2</field>
            <field name="arch" type="xml">
                <form>
                    <field invisible="1" name="state"/>
                    <div states="choose">
                        <group >
                            <field name="date_from" required="1"/>
                            <field name="date_to" required="1"/>
                            <!-- <field name="inv_type" required="1"/> -->
                        </group>
                    </div>
                    <div states="get">
                        <group>
                            <field name="filename" colspan="4" invisible="1"/>
                            <field name="report" filename="filename" colspan="4" invisible="1"/>
                        </group>
                    </div>
                    <footer states="choose">
                        <button name="generate_gstr2_report" string="Generate GSTR2" type="object" class="oe_highlight" />
                        <button special="cancel" string="Cancel" class="oe_highlight" />
                    </footer>
                    <footer states="get">
                        <button special="cancel" string="Cancel" class="oe_highlight" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_gstr2_report" model="ir.actions.act_window">
            <field name="name">GSTR2 Report</field>
            <field name="res_model">texbyte_gstr.report.gstr2</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="invoice_gstr2_form"/>
            <field name="target">new</field>
        </record>

        <menuitem id="account_report_gstr2" name="GSTR2 Report" parent="account.menu_finance_reports" action="action_gstr2_report" sequence="22" groups="account.group_account_manager"/>

    </data>
</odoo>
